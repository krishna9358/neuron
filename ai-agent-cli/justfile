# Create venv if it doesn't exist
venv:
    #!/usr/bin/env bash
    if [ ! -d ".venv" ]; then
        echo "Creating virtual environment..."
        python3 -m venv .venv
    fi
    echo ""
    echo "To activate, run:"
    echo "  For fish:  source .venv/bin/activate.fish"
    echo "  For bash:  source .venv/bin/activate"
    echo ""
    echo "Then install dependencies with: pip install openai"